<local:DialogBase x:Class="WpfMvvmApp.Dialogs.SampleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMvvmApp.Dialogs"
        mc:Ignorable="d" 
        Background="{DynamicResource ColorNeutralBackground1Brush}"
        Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Style="{DynamicResource BrandType1Button}" Click="OkButton_Click">
                <TextBlock Text="OK" />
            </Button>
            <Button Click="CancelButton_Click">
                <TextBlock Text="Cancel" />
            </Button>
        </StackPanel>

    </Grid>
</local:DialogBase>
