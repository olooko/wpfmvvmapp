<UserControl x:Class="WpfMvvmApp.Controls.Popups.AlertYesNoPopupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfMvvmApp.Controls.Popups"
             mc:Ignorable="d" 
             Background="Yellow"
             Height="150" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="100" Height="40" Click="YesButton_Click">Yes</Button>
            <Button Width="100" Height="40" Click="NoButton_Click">No</Button>
        </StackPanel>
    </Grid>
</UserControl>
